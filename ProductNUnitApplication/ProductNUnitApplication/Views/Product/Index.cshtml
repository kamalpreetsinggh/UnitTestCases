@model IEnumerable<ProductNUnitApplication.Models.Product.Product>
@{
    ViewData["Title"] = "Index";
}

<h2 style="margin: 15px">Index</h2>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@Html.ActionLink("Add", "AddProduct", new { productName = product.ProductName, productPrice = product.ProductPrice })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <form method="post" style="margin: 15px">
        <select name="CustomerType" style="padding: 7px">
            <option value="Regular">Regular Customer</option>
            <option value="Premium">Premium Customer</option>
        </select>
        <input type="submit" value="Checkout" style="padding: 5px" />
    </form>
</div>

